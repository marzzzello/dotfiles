timeout 240 'notify-send "Locking in 1 min"'
timeout 300 'swaylock --grace 30 && sleep 30 && killall evolution -s STOP && qdbus org.keepassxc.KeePassXC.MainWindow /keepassxc org.keepassxc.KeePassXC.MainWindow.lockAllDatabases'
timeout 360 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'
lock 'swaylock && killall evolution -s STOP && qdbus org.keepassxc.KeePassXC.MainWindow /keepassxc org.keepassxc.KeePassXC.MainWindow.lockAllDatabases'
unlock 'killall swaylock -s USR1'
unlock 'sleep 1 && killall evolution -s CONT'
unlock 'notify-send unlocked'
#idlehint 3 'notify-send IdleHint 3s'
after-resume 'notify-send resumed'
