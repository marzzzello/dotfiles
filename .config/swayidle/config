timeout 240 'notify-send "Locking in 1 min"'
timeout 300 '~/.config/swaylock/lock.sh'
timeout 360 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'
before-sleep '~/.config/swaylock/lock.sh'
lock '~/.config/swaylock/lock.sh'
unlock 'killall swaylock -s USR1'
unlock 'sleep 1 && killall evolution -s CONT'
unlock 'notify-send unlocked'
#idlehint 3 'notify-send IdleHint 3s'
after-resume 'notify-send resumed'
