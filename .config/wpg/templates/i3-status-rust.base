# {infoMsg}

[theme]
name = "solarized-dark"
[theme.overrides]
idle_bg 		= "{color0}" ###base03
idle_fg 		= "{color7}" ###base1
info_bg 		= "{active}" 		 ###blue
info_fg 		= "{color0}" ###base03
good_bg 		= "{color7}"		 ###green
good_fg 		= "{color0}" ###base03
warning_bg 		= "{color11}" 		 ###yellow
warning_fg 		= "{color0}" ###base03
critical_bg 	= "{color2}" 		 ###red
critical_fg 	= "{color0}" ###base03
 ## separator 		= "\u{{e0b2}}"
separator_bg 	= "auto"
separator_fg 	= "auto"
alternating_tint_bg = "{color0}"
alternating_tint_fg = "{color0}"

[icons]
name= "awesome"

