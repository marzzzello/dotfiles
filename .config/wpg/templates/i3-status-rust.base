[[block]]
block = "disk_space"
path = "/"
alias = "/"
info_type = "available"
unit = "TiB"
interval = 20
warning = 20.0
alert = 10.0

[[block]]
block = "memory"
display_type = "memory"
format_mem = "{{Mup}}%"
format_swap = "{{SUp}}%"

[[block]]
block = "cpu"
interval = 1

[[block]]
block = "load"
interval = 1
format = "{{1m}}"

[[block]]
block = "sound"

[[block]]
block = "net"
device = "w0"
 ## ssid = true
